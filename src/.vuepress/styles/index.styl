/**
 * Custom Styles here.
 *
 * ref：https://v1.vuepress.vuejs.org/config/#index-styl
 */

@import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap')
@import "//at.alicdn.com/t/font_2352663_04f3f33mv8ro.css"

.home .hero img
  max-width 450px!important

:root
  --boxes: #f5f7f9
  --primary-color: #3884ff
  --bg-color: white
  --heading-char-color: #9daab6
  --boxes-darker2: #bac2c9
  --font: "Merriweather", '楷体', '楷体-简', '思源宋体' !important
  --code-font: 'Source Code Pro', "Fira Code", "Consolas", "楷体", '楷体-简', "思源宋体"

img
  display: block
  max-width: 100%
  margin: 0 auto
  border-radius: 10px

body, button
  font-family: var(--font)

.page .page-info,
.page-nav,
.code-group-nav-tab,
.page-meta,
.markdown-body
  font-family: var(--font) !important

code,
kbd,
.line-number
  font-family: var(--code-font) !important

ul, ol
  line-height: 2
  padding-left: 2.2em

// blockquote
blockquote::before
  content: "❝"
  color: rgba(64, 184, 250, .5)
  font-size: 34px
  line-height: 1
  font-weight: 700
blockquote
  padding: 20px
  text-size-adjust: 100%
  line-height: 1.55em
  font-weight: 400
  border-radius: 6px
  color: #2d2e36
  font-style: normal
  text-align: left
  box-sizing: inherit
  border-left: none
  border: 1px solid rgba(64, 184, 250, .6)
  background: rgba(64, 184, 250, .2) 
blockquote p
  color: #2d2e36
blockquote::after
  content: "❞"
  color: rgba(64, 184, 250, .5)
  float: right
.theme-dark blockquote 
  background: rgba(73, 92, 105, .5)
  border: 1px solid rgba(73, 92, 105, .6)
  color: #e2e1e4
.theme-dark blockquote::before 
  color: rgba(73, 92, 105, .5)
.theme-dark blockquote::after 
  color: rgba(73, 92, 105, .5)
.theme-dark blockquote p 
  color: #e2e1e4

iframe
  border: none

// CodeGroup tab设置
.code-group-nav-tab
  border-radius: 0 !important

// gitalk
#vuepress-plugin-comment 
  width: 80%
  margin: 0 auto

.markdown-body .highlight pre, .markdown-body pre
  background-color: var(--code-bgcolor) !important

// 评论区背景色设置
.gt-comments
  margin-top: 10px !important
  padding: 10px !important
  border-radius: 5px !important
  background: #fff !important
  box-shadow: inset 3px 3px 5px rgba(0, 0, 0, .1),
              inset -3px -3px 5px rgba(0, 0, 0, .1) !important

.gt-container .gt-comment-admin .gt-comment-content 
  background: var(--bg-color) !important

.gt-container .gt-comment-content:hover
  box-shadow: none !important

// gitalk：暗色模式
.theme-dark .gt-container .gt-comment-admin .gt-comment-content
  background: #1e1e1e
.theme-dark .gt-container .gt-comment-body
  color: var(--textColor) !important
.theme-dark .gt-container .gt-comment-admin .gt-comment-content 
  background: #1e1e1e !important
.theme-dark .gt-comments
  background: #1e1e1e !important
  box-shadow: inset 3px 3px 5px rgba(0, 0, 0, .5),
              inset -3px -3px 5px rgba(0, 0, 0, .5) !important

// 暗色表格设置
.theme-dark .markdown-body table tr
  background: #1e1e1e !important
  border-color: rgb(128, 128, 128) !important
.theme-dark .markdown-body table th,
.theme-dark .markdown-body table td
  border-color: rgb(128, 128, 128) !important

// strong
strong 
  background: linear-gradient(to right, #00b4db, #0083b0)
  -webkit-background-clip: text
  color: transparent
.theme-dark strong
  background: linear-gradient(135deg, #CE9FFC 10%, #7367F0 100%)
  -webkit-background-clip: text
  color: transparent